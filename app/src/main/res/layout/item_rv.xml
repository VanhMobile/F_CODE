<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/item_rv"
    android:orientation="vertical"
    android:id="@+id/itemRvCourse">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/kh_kotlin" />
    <TextView
        android:id="@+id/nameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin cơ bản đến nâng cao"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/nameAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tác giả: Nguyễn Việt Anh"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/courseNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khóa học được hương đãn từ cơ bản đến nâng cao trong thời lượng 90h học"
        android:textColor="#4E4D4D"
        android:layout_marginLeft="10dp"/>

</LinearLayout>